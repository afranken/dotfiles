
###################################################
# Extract - extract most common compression types #
###################################################
function extract() {
  local e=0 i c
  for i; do
    if [[ -f $i && -r $i ]]; then
        c=''
        case $i in
          *.7z)  c='7z x'       ;;
          *.Z)   c='uncompress' ;;
          *.bz2) c='bunzip2'    ;;
          *.exe) c='cabextract' ;;
          *.gz)  c='gunzip'     ;;
          *.rar) c='unrar x'    ;;
          *.xz)  c='unxz'       ;;
          *.zip) c='unzip'      ;;
          *)     echo "$0: cannot extract \`$i': Unrecognized file extension" >&2; e=1 ;;
        esac
        [[ $c ]] && command $c "$i"
    else
        echo "$0: cannot extract \`$i': File is unreadable" >&2; e=2
    fi
  done
  return $e
}

####################################################################################
# remindme: to remind yourself of an alias (given some part of it), or all aliases #
####################################################################################
function remindme() {
  if [ -z "$1" ];
    then
      cat "${BASH_SRC_PATH}"/.aliases*
    else
      grep -i -h -a1 $@ "${BASH_SRC_PATH}"/.aliases* | grep -v '^\s*$' ;
  fi
}

#####################################################
# open github page for repository in new chrome tab #
#####################################################
function github() {
    url=$(git remote -v 2>/dev/null | awk '/.+github\.com.+(fetch)/ {sub(/git:/,"http:"); print $2}')
    if [ "${url}" ]; then
        open -a Google\ Chrome ${url}
    fi
}
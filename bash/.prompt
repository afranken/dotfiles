time24h="\t";
pathShort="\w";

RED='\[\033[0;31m\]';
GREEN='\[\033[0;32m\]';
GREY='\[\033[0;90m\]';
YELLOW='\[\033[1;33m\]';
RESET='\[\033[0m\]';

function git_ps1() {
  # check if we're in a git repo
  git rev-parse --is-inside-work-tree &>/dev/null 2>&1 || return;
  #get branch name
  branch=$(git symbolic-ref -q HEAD | sed -e 's|^refs/heads/||');
  if [ $(git status -sb | wc -l) -eq "1" ]; then
    # Clean repository - nothing to commit
    #GREEN=$(tput setaf 112)
    echo $'\E[32m'"($branch) ";
  else
    #files were modified
    git diff --no-ext-diff --quiet --exit-code &>/dev/null 2>&1 || modified=" *";
    #files were added
    git diff-index --cached --quiet HEAD -- &>/dev/null 2>&1 || added=" +";
    #RED=$(tput setaf 9)
    echo $'\E[91m'"{$branch$modified$added} ";
  fi
}

export PS1=$GREY$time24h' $(git_ps1 "%s")'$YELLOW$pathShort$RESET' \$ '

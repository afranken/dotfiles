## Aliases to quickly switch between Java LTE releases
alias java8='export JAVA_HOME=$(/usr/libexec/java_home -v 1.8)'
alias java11='export JAVA_HOME=$(/usr/libexec/java_home -v 11)'
alias java17='export JAVA_HOME=$(/usr/libexec/java_home -v 17)'

# Open BBEdit, pass optional argument as file to open
alias bb='open -a BBEdit '

# List all open ports
alias lsofg='lsof -i -P | grep -i "listen"'

# Start a process in rosetta to emulate x86 processors
alias rosetta='arch -x86_64'

alias ls=lsd
